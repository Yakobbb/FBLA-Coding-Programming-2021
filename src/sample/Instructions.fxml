<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="Background" prefHeight="750.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.QuestionLoader">
   <children>
      <Button fx:id="begin" layoutX="404.0" layoutY="556.0" mnemonicParsing="false" onAction="#goToQuestion" prefHeight="74.0" prefWidth="116.0" text="Begin!" textFill="#0a0a0a">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Label fx:id="instructionsLabel" alignment="CENTER" layoutX="159.0" layoutY="75.0" prefHeight="239.0" prefWidth="603.0" text="In this quiz, you will be asked five questions about the category you chose. The questions themselves will be of four types: Multiple Choice, True/False, Matching, and Fill-In. At the top of every question screen, the instructions as well as the question itself will be listed. There will also be a bar at the bottom of the screen throughout the quiz that tracks your progress. Good luck!" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="quickNote" alignment="CENTER" layoutX="161.0" layoutY="338.0" prefHeight="133.0" prefWidth="603.0" text="NOTE: When dragging a statement in the Matching questions, there will be no animation of the statement &quot;dragging&quot;. This is okay, just drop it on what you think the answer is!" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
